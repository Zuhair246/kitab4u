<%- include("../../views/partials/user/header") %>

<div class="container my-5">
  <div class="row">
    <!-- Sidebar -->
    <%- include("../../views/partials/user/sidebar") %>

    <!-- Main Body -->
    <div class="col-md-8">
      <div class="card shadow-sm rounded">
        <div class="card-body">
          <h4 class="mb-4">Change Password</h4>

          <!-- Flash Messages -->
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
              <% error.forEach(function(msg) { %>
                <p class="mb-0"><%= msg %></p>
              <% }); %>
            </div>
          <% } %>

          <% if (success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
              <% success.forEach(function(msg) { %>
                <p class="mb-0"><%= msg %></p>
              <% }); %>
            </div>
          <% } %>

          <!-- Change Password Form -->
          <form action="/profile/changePassword" method="POST">
            <!-- Old Password -->
            <div class="mb-3 row">
              <label class="col-sm-4 col-form-label fw-semibold text-end">Old Password</label>
              <div class="col-sm-6">
                <input type="password" name="oldPassword" class="form-control" value="<%= formData ? formData.oldPassword : '' %>">
                <!-- Forgot Password link -->
                <div class="mt-2">
                  <a href="#" class="btn btn-link p-0 text-danger">Forgot Old Password ?</a>
                </div>
              </div>
            </div>

            <!-- New Password -->
            <div class="mb-3 row">
              <label class="col-sm-4 col-form-label fw-semibold text-end">New Password</label>
              <div class="col-sm-6">
                <input type="password" name="newPassword" class="form-control" value="<%= formData ? formData.newPassword : '' %>">
              </div>
            </div>

            <!-- Confirm Password -->
            <div class="mb-3 row">
              <label class="col-sm-4 col-form-label fw-semibold text-end">Confirm Password</label>
              <div class="col-sm-6">
                <input type="password" name="confirmPassword" class="form-control" value="<%= formData ? formData.confirmPassword : '' %>">
              </div>
            </div>

            <!-- Submit -->
            <div class="row">
              <div class="col-sm-10 offset-sm-4">
                <button type="submit" class="btn btn-primary">Update Password</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../views/partials/user/footer") %>
