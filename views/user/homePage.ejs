
    <link rel="stylesheet" href="../../styles/user/homePage.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">


<%-include("../../views/partials/user/header")%>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="hero-text">A Room Without Books is Like a Body Without a Soul</h1>
                    <p class="hero-quote">- Cicero</p>
                    <button class="btn btn-danger shop-now-btn">SHOP NOW</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Browse Categories -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">Browse Categories</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="category-card">
                        <img src="../../images/fiction.jpg" 
                             alt="Fiction" class="img-fluid w-100 h-100" style="object-fit: cover;">
                        <div class="category-overlay">
                            <h3 class="category-title">Fiction</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="category-card">
                        <img src="../../images/non-fiction.png" 
                             alt="Non-Fiction" class="img-fluid w-100 h-100" style="object-fit: cover;">
                        <div class="category-overlay">
                            <h3 class="category-title">Non-Fiction</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

                                                       <!-- New Arrivals -->
                                <section class="py-5 bg-light" id="new-arrivals">
                                <div class="container">
                                    <h2 class="text-center mb-5 fw-bold">New Arrivals</h2>
                                    <div class="row g-4">
                                    
                            <% books.forEach(book => { %>
                        <div class="col-lg-4 col-md-6">
                            <div class="card book-card h-100 shadow-sm">

                            <!-- Image Container (forces 2:3 ratio) -->
                            <div class="ratio ratio-2x3">
                                <a class="d-block" href="/productDetails?id=<%= book._id %>" aria-label="<%= book.name %>" style="aspect-ratio: 2 / 3;">
                                <img 
                                src="<%= book.images && book.images.length > 0 ? book.images[0] : '/placeholder.svg?height=600&width=400' %>"
                                alt="<%= book.name %>" 
                                class="card-img-top book-image"
                                >
                              </a>
                            </div>

                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= book.name %></h5>
                                <p class="card-text text-muted"><%= book.author %></p>
                                
                                <!-- Dummy Star Rating -->
                                <div class="d-flex align-items-center mb-2">
                                <% 
                                    const rating = Math.floor(Math.random() * 2) + 4; // gives 4 or 5
                                    const totalStars = 5;
                                %>
                                <% for (let i = 1; i <= totalStars; i++) { %>
                                    <% if (i <= rating) { %>
                                    <i class="fas fa-star text-warning"></i>
                                    <% } else { %>
                                    <i class="far fa-star text-warning"></i>
                                    <% } %>
                                <% } %>
                                <small class="text-muted ms-2">(3.6k Customer Reviews)</small>
                                </div>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                <span class="price fw-bold">â‚¹<%= book.defaultPrice %></span>
                                <form action="/cart" method="post">
                                <input type="hidden" name="productId" value="<%= book._id %>">
                                <input type="hidden" name="variantId" value="<%= book.variants[0]._id %>">
                                <button class="btn btn-primary px-4" type="submit">
                                <i class="bi bi-cart-plus me-2"></i>Add to Cart
                                </button>
                                </form>
                                <!-- <button class="btn btn-primary btn-sm">Add to Cart</button> -->
                                </div>
                            </div>
                            </div>
                        </div>
                        <% }); %>
                                    </div>

                                        <!-- Pagination -->
                                <div class="d-flex justify-content-center mt-4">
                                <nav aria-label="Page navigation">
                                    <ul class="pagination">
                                        
                                    <% if (currentPage > 1) { %>
                                        <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage - 1 %>">&lt;</a>
                                        </li>
                                    <% } %>
                                    <% for (let i = 1; i <= totalPages; i++) { %>
                                        <li class="page-item <%= i === currentPage ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                        </li>
                                    <% } %>

                                    <% if (currentPage < totalPages) { %>
                                        <li class="page-item">
                                        <a class="page-link" href="?page=<%= currentPage + 1 %>">&gt;</a>
                                        </li>
                                    <% } %>

                                    </ul>
                                </nav>
                                </div>

                                </div>
                                </section>

    <!-- Footer -->
    
<%-include("../../views/partials/user/footer")%>
    
    <script>
 
        document.addEventListener('DOMContentLoaded', function() {
         
            document.querySelectorAll('.category-card').forEach(card => {
                card.addEventListener('click', function() {
                    const category = this.querySelector('.category-title').textContent.toLowerCase();
                    window.location.href = `/shop/${encodeURIComponent(category)}`;
                });
            });

        
            document.querySelector('.shop-now-btn').addEventListener('click', function() {
                window.location.href = '/shop';
            });

      
            document.querySelectorAll('.btn:contains("Add to Cart")').forEach(btn => {
                btn.addEventListener('click', function() {
                   
                    // alert('Added to cart!'); <----> Change this to toastify
                });
            });
            window.location.reload();
        });
    </script>
