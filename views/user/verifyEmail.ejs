<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Email Verification - KITAB4U</title>
    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap Icons -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <link
      rel="shortcut icon"
      href="../../images/logo.png"
      type="image/x-icon"
    />

    <link rel="stylesheet" href="../../styles/user/verifyEmail.css">
  </head>
  <body>
    <div class="container-fluid p-0">
      <div class="row g-0 min-vh-100">
        <!-- Left Side - Logo Section -->
        <div
          class="col-lg-6 logo-section d-flex align-items-center justify-content-center p-5"
        >
          <img src="../../images/logo.png" alt="logo" class="img-fluid" />
        </div>

        <!-- Right Side - OTP Form Section -->
        <div
          class="col-lg-6 form-section d-flex align-items-center justify-content-center p-5"
        >
          <div class="otp-form w-100">
            <!-- OTP Heading -->
            <h2
              class="text-center mb-5 fw-bold"
              style="font-size: 2.5rem; color: #333"
            >
              Email Verification
            </h2>

             <!-- Flash Messages -->
<% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <% error.forEach(function(msg) { %>
            <p class="mb-0"><%= msg %></p>
        <% }); %>
    </div>
<% } %>

<% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <% success.forEach(function(msg) { %>
            <p class="mb-0"><%= msg %></p>
        <% }); %>
    </div>
<% } %>

            <!-- Form -->
            <form action="/verifyEmail" method="post">
              <!-- Instructions -->
              <h5 class="mb-3 fw-semibold text-dark">
                Enter your Email for recieving OTP:
              </h5>
              
              <!-- Email Input -->
              <div class="mb-4">
                <input
                  type="text"
                  class="form-control form-control-lg"
                  id="email"
                  name="email"
                  placeholder="Email"
                  style="
                    border: none;
                    border-bottom: 2px solid #dee2e6;
                    border-radius: 0;
                    background: transparent;
                    padding-left: 0;
                  "
                />
              </div>

              <!-- Verify Button -->
              <div class="mb-4">
                <button
                  type="submit"
                  id="verifyBtn"
                  class="btn btn-verify text-white w-100 py-3 fw-semibold"
                >Recieve OTP
                </button>
              </div>

            </form>

            <!-- Bottom Brand -->
            <div class="position-absolute bottom-0 end-0 p-4">
              <small class="text-muted">KITAB4U</small>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
 
  const form = document.querySelector("form");
  const verifyBtn = document.getElementById("verifyBtn");

  form.addEventListener("submit", function () {
    verifyBtn.disabled = true;
    verifyBtn.innerText = "Please wait..."; 
    verifyBtn.classList.add("disabled"); 
  });
</script>

    </body>
</html>