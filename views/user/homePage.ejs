
    <link rel="stylesheet" href="../../styles/user/homePage.css">

<%-include("../../views/partials/user/header")%>
    <!-- Hero Section -->
    <section class="hero-section">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <h1 class="hero-text">A Room Without Books is Like a Body Without a Soul</h1>
                    <p class="hero-quote">- Cicero</p>
                    <button class="btn btn-danger shop-now-btn">SHOP NOW</button>
                </div>
            </div>
        </div>
    </section>

    <!-- Browse Categories -->
    <section class="py-5">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">Browse Categories</h2>
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="category-card">
                        <img src="../../images/fiction.jpg" 
                             alt="Fiction" class="img-fluid w-100 h-100" style="object-fit: cover;">
                        <div class="category-overlay">
                            <h3 class="category-title">Fiction</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="category-card">
                        <img src="../../images/non-fiction.png" 
                             alt="Non-Fiction" class="img-fluid w-100 h-100" style="object-fit: cover;">
                        <div class="category-overlay">
                            <h3 class="category-title">Non-Fiction</h3>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- New Arrivals -->
    <section class="py-5 bg-light">
        <div class="container">
            <h2 class="text-center mb-5 fw-bold">New Arrivals</h2>
            <div class="row g-4">
                <% 
                const books = [
                    { title: "The Ministry Of Time", author: "Kaliane Bradley", price: "â‚¹249", rating: 4.5, image: "../../images/non-fiction.png" },
                    { title: "Klara and the Sun", author: "Kazuo Ishiguro", price: "$26.99", rating: 4.2, image: "klara and the sun book cover" },
                    { title: "The Book of Elsewhere", author: "Keanu Reeves", price: "$28.99", rating: 4.7, image: "book of elsewhere cover" },
                    { title: "Hidden Potential", author: "Adam Grant", price: "$22.99", rating: 4.3, image: "hidden potential book cover" },
                    { title: "Slow Productivity", author: "Cal Newport", price: "$25.99", rating: 4.6, image: "slow productivity book cover" },
                    { title: "The Wager", author: "David Grann", price: "$27.99", rating: 4.8, image: "the wager book cover" }
                ];
                %>
                
                <% books.forEach(book => { %>
                <div class="col-lg-4 col-md-6">
                    <div class="card book-card">
                        <img src="/placeholder.svg?height=250&width=200" 
                             alt="<%= book.title %>" class="card-img-top book-image">
                        <div class="card-body">
                            <h5 class="card-title"><%= book.title %></h5>
                            <p class="card-text text-muted"><%= book.author %></p>
                            <div class="d-flex align-items-center mb-2">
                                <div class="rating me-2">
                                    <% for(let i = 1; i <= 5; i++) { %>
                                        <% if(i <= Math.floor(book.rating)) { %>
                                            <i class="fas fa-star"></i>
                                        <% } else if(i === Math.ceil(book.rating) && book.rating % 1 !== 0) { %>
                                            <i class="fas fa-star-half-alt"></i>
                                        <% } else { %>
                                            <i class="far fa-star"></i>
                                        <% } %>
                                    <% } %>
                                </div>
                                <small class="text-muted">(<%= book.rating %>)</small>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <span class="price"><%= book.price %></span>
                                <button class="btn btn-primary btn-sm">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                </div>
                <% }); %>
            </div>
        </div>
    </section>

    <!-- Footer -->
    
<%-include("../../views/partials/user/footer")%>
    
    <script>
        // Add some interactivity
        document.addEventListener('DOMContentLoaded', function() {
            // Category card click handlers
            document.querySelectorAll('.category-card').forEach(card => {
                card.addEventListener('click', function() {
                    const category = this.querySelector('.category-title').textContent.toLowerCase();
                    window.location.href = `/category/${category}`;
                });
            });

            // Shop now button
            document.querySelector('.shop-now-btn').addEventListener('click', function() {
                window.location.href = '/shop';
            });

            // Add to cart buttons
            document.querySelectorAll('.btn:contains("Add to Cart")').forEach(btn => {
                btn.addEventListener('click', function() {
                    // Add cart functionality here
                    alert('Added to cart!');
                });
            });
        });
    </script>
