<%- include('../../views/partials/admin/header') %>
<link rel="stylesheet" href="/styles/admin/dashboard.css">
<!-- Main Content Area -->
<div class="col-md-10">
  <!-- Page Header -->
  <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center p-4 border-bottom mb-5">
    <div>
      <h1 class="h2 fw-bold mb-1">Dashboard</h1>
      <p class="text-muted mb-0">Welcome back! Here's what's happening with your store today.</p>
    </div>

    </div>

        <!-- Sales Overview Chart Card -->
    <div class="card shadow-sm border-0 mb-5">
    <div class="card-body p-4">

        <!-- HEADER ROW -->
        <div class="row align-items-center mb-4">

        <!-- LEFT: Title -->
        <div class="col-md-6">
            <h5 class="card-title fw-bold mb-1">Sales Overview</h5>
            <p class="text-muted small mb-0">Kitab4U online book store</p>
        </div>

        <!-- RIGHT: Radio Buttons -->
        <div class="col-md-6 d-flex justify-content-md-end justify-content-start mt-3 mt-md-0">
            <div class="btn-group" role="group">
            <input type="radio" class="btn-check" name="range" id="yearly" autocomplete="off">
            <label class="btn btn-outline-secondary btn-sm" for="yearly">Yearly</label>

            <input type="radio" class="btn-check" name="range" id="monthly" autocomplete="off" checked>
            <label class="btn btn-outline-secondary btn-sm" for="monthly">Monthly</label>

            <input type="radio" class="btn-check" name="range" id="weekly" autocomplete="off">
            <label class="btn btn-outline-secondary btn-sm" for="weekly">Weekly</label>

            <input type="radio" class="btn-check" name="range" id="daily" autocomplete="off">
            <label class="btn btn-outline-secondary btn-sm" for="daily">Daily</label>

            <input type="radio" class="btn-check" name="range" id="today" autocomplete="off">
            <label class="btn btn-outline-secondary btn-sm" for="today">Today</label>

            </div>
        </div>

        </div>

        <!-- Chart Placeholder -->
        <div class="card shadow-sm border-0 mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0 fw-semibold">Sales Trend</h5>
        </div>
        <div class="card-body">
            <canvas id="salesTrendChart" height="120"></canvas>
        </div>
        </div>

    </div>
    </div>

  <!-- Top Selling Products & Categories -->
  <div class="row g-4">
    <!-- Top Selling Products -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="mb-0 fw-bold">Top 10 Selling Products</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th class="ps-4">Product Name</th>
                  <th class="text-end">Units Sold</th>
                </tr>
              </thead>
                <tbody>
                <% if (topProducts && topProducts.length > 0) { %>
                    <% topProducts.forEach((product, i) => { %>
                    <tr>
                        <td class="ps-4"><%= product.productName %></td>
                        <td class="text-end"><%= product.totalSoldQuantity %></td>
                    </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                    <td colspan="2" class="text-center text-muted">No sales data available</td>
                    </tr>
                <% } %>
                </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <!-- Top Categories -->
    <div class="col-12 col-lg-6">
      <div class="card shadow-sm border-0 h-100">
        <div class="card-header bg-white border-0 py-3">
          <h5 class="mb-0 fw-bold">Top 10 Product Categories</h5>
        </div>
        <div class="card-body p-0">
          <div class="table-responsive">
            <table class="table table-hover mb-0">
              <thead class="table-light">
                <tr>
                  <th class="ps-4">Category Name</th>
                  <th class="text-end">Units Sold</th>
                </tr>
              </thead>
              <tbody>
                <% if (topCategories && topCategories.length > 0) { %>
                    <% topCategories.forEach((cat, i) => { %>
                <tr>
                  <td class="ps-4"><%= cat.categoryName %></td>
                  <td class="text-end"><%= cat.topProductCount %></td>
                </tr>
                    <% }) %>
                <% } else { %>
                    <tr>
                        <td colspan="2" class="text-center text-muted">No Category Data Available</td>
                    </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../../views/partials/admin/footer') %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<script>
    let salesChart;

// Initialize chart
function renderChart(labels, data) {
    const ctx = document.getElementById("salesTrendChart").getContext("2d");

    if (salesChart) {
        salesChart.destroy();  // destroy old chart before drawing new
    }

    salesChart = new Chart(ctx, {
        type: "line",
        data: {
            labels: labels,
            datasets: [{
                label: "Total Revenue (â‚¹)",
                data: data,
                borderWidth: 2,
                tension: 0.3,
                fill: true
            }]
        },
        options: {
            responsive: true,
            scales: {
                y: { beginAtZero: true }
            }
        }
    });
}


// Fetch chart data based on range
async function loadChart(range, startDate = "", endDate = "") {
    try {
        const params = new URLSearchParams({ range, startDate, endDate });

        const res = await fetch(`/admin/dashboard/chartData?${params.toString()}`);
        const { labels, data } = await res.json();

        renderChart(labels, data);
    } catch (error) {
        console.error("Chart load error:", error);
    }
}


// Trigger chart loading on filter change
document.querySelectorAll("input[name='range']").forEach((radio) => {
    radio.addEventListener("change", function ()  {
        const range = this.id;

        const startDate = document.getElementById("startDate")?.value || "";
        const endDate = document.getElementById("endDate")?.value || "";

        loadChart(range, startDate, endDate);
    });
});


// Load weekly by default
window.onload = () => {
    loadChart("monthly");
};
</script>
