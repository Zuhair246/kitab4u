<%- include("../../views/partials/user/header") %>

<div class="container my-5">
  <div class="row">
<!-- Sidebar (Desktop) -->
    <div class="col-md-4 d-none d-md-block">
      <%- include("../../views/partials/user/sidebar") %>
    </div>

    <!-- Sidebar Toggle Button (Mobile) -->
    <div class="d-block d-md-none mb-3">
      <button class="btn btn-outline-primary" type="button" data-bs-toggle="offcanvas" data-bs-target="#sidebarOffcanvas" aria-controls="sidebarOffcanvas">
        <i class="bi bi-list"></i> Menu
      </button>
    </div>

    <!-- Offcanvas Sidebar (Mobile) -->
    <div class="offcanvas offcanvas-start" tabindex="-1" id="sidebarOffcanvas" aria-labelledby="sidebarOffcanvasLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="sidebarOffcanvasLabel">Your Account</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <%- include("../../views/partials/user/sidebar") %>
      </div>
    </div>
    
    <!-- Main Body -->
    <div class="col-md-8">
            <!-- Breadcrumb -->
      <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/profile" class="text-decoration-none">Your Account</a></li>
          <li class="breadcrumb-item"><a href="/profile/changePassword" class="text-decoration-none">Change Password</a></li>
          <li class="breadcrumb-item active" aria-current="page">Forgot password</li>
        </ol>
      </nav>

      <div class="card shadow-sm rounded">
        <div class="card-body">
          <h4 class="mb-4">Change Password with OTP</h4>
          
          <!-- Flash Messages -->
          <% if (error && error.length > 0) { %>
            <div class="alert alert-danger" role="alert">
              <% error.forEach(function(msg) { %>
                <p class="mb-0"><%= msg %></p>
              <% }); %>
            </div>
          <% } %>
          
          <% if (success && success.length > 0) { %>
            <div class="alert alert-success" role="alert">
              <% success.forEach(function(msg) { %>
                <p class="mb-0"><%= msg %></p>
              <% }); %>
            </div>
          <% } %>
          
          <!-- Change Password Form -->
          <form action="/profile/setNewPassword" method="POST" id="changePasswordForm">
            <!-- OTP Field -->
            <div class="mb-3 row">
              <label class="col-sm-4 col-form-label fw-semibold text-end">Enter OTP</label>
              <div class="col-sm-6">
                <input type="text" name="otp" class="form-control" placeholder="Enter 6-digit OTP" maxlength="6" value="<%= formData ? formData.otp : '' %>" >
                <div class="mt-2 d-flex justify-content-between align-items-center">
                  <small class="text-muted">OTP sent to your registered email</small>
                  <div class="d-flex align-items-center">
                    <span id="timer" class="badge bg-warning text-dark me-2">01:00</span>
                    <button type="button" id="resendOTP" class="btn btn-link p-0 text-primary" disabled>
                      Resend OTP
                    </button>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- New Password -->
            <div class="mb-3 row">
              <label class="col-sm-4 col-form-label fw-semibold text-end">New Password</label>
              <div class="col-sm-6">
                <input type="password" name="newPassword" class="form-control" value="<%= formData ? formData.newPassword : '' %>" >
                <div class="form-text">
                  <small class="text-muted">Password must be at least 7 characters long</small>
                </div>
              </div>
            </div>
            
            <!-- Confirm Password -->
            <div class="mb-3 row">
              <label class="col-sm-4 col-form-label fw-semibold text-end">Confirm Password</label>
              <div class="col-sm-6">
                <input type="password" name="confirmPassword" class="form-control" value="<%= formData ? formData.confirmPassword : '' %>" >
                <div id="passwordMatch" class="form-text"></div>
              </div>
            </div>
            
            <!-- Submit -->
            <div class="row">
              <div class="col-sm-10 offset-sm-4">
                <button type="submit" class="btn btn-primary" id="updateBtn">
                  <span class="spinner-border spinner-border-sm me-2 d-none" id="loadingSpinner"></span>
                  Update Password
                </button>
                <button type="button" class="btn btn-secondary ms-2" onclick="history.back()">Cancel</button>
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- JavaScript for Timer and Validation -->
<script>
document.addEventListener('DOMContentLoaded', function() {
    let timeLeft = 60;
    const timerElement = document.getElementById('timer');
    const resendButton = document.getElementById('resendOTP');
    const otpInput = document.querySelector('input[name="otp"]');
    const newPasswordInput = document.querySelector('input[name="newPassword"]');
    const confirmPasswordInput = document.querySelector('input[name="confirmPassword"]');
    const passwordMatchDiv = document.getElementById('passwordMatch');
    const form = document.getElementById('changePasswordForm');
    const updateBtn = document.getElementById('updateBtn');
    const loadingSpinner = document.getElementById('loadingSpinner');

    // Flash message helper
    function showFlashMessage(type, message) {
        const alertDiv = document.createElement('div');
        alertDiv.className = `alert alert-${type} alert-dismissible fade show`;
        alertDiv.innerHTML = `
            <span>${message}</span>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        `;
        form.insertBefore(alertDiv, form.firstChild);

        setTimeout(() => {
            if (alertDiv.parentNode) alertDiv.remove();
        }, 4000);
    }

    // Timer logic
    function startTimer() {
        timeLeft = 60;
        resendButton.disabled = true;
        timerElement.className = 'badge bg-warning text-dark me-2';

        const timer = setInterval(() => {
            const minutes = Math.floor(timeLeft / 60);
            const seconds = timeLeft % 60;

            timerElement.textContent = `${minutes.toString().padStart(2,'0')}:${seconds.toString().padStart(2,'0')}`;

            if (timeLeft <= 0) {
                clearInterval(timer);
                // timerElement.textContent = 'Expired';
                // timerElement.className = 'badge bg-danger';
                resendButton.disabled = false;
            }

            timeLeft--;
        }, 1000);
    }

    startTimer();

    // ✅ Resend OTP AJAX call
    resendButton.addEventListener('click', async function(e) {
        e.preventDefault();
        if (resendButton.disabled) return;

        otpInput.value = '';
        otpInput.focus();

        try {
            const response = await fetch("/resendOtp", {
                method: "POST",
                headers: { "Content-Type": "application/json" }
            });

            const data = await response.json();

            if (data.success) {
                showFlashMessage("success", data.message || "OTP has been resent to your registered email");
                startTimer();
            } else {
                showFlashMessage("danger", data.message || "Failed to resend OTP");
                if (data.redirect) {
                    setTimeout(() => window.location.href = data.redirect, 2000);
                }
            }
        } catch (error) {
            showFlashMessage("danger", "Error while resending OTP. Please try again.");
        }
    });

    // OTP input validation (only numbers)
    otpInput.addEventListener('input', function() {
        this.value = this.value.replace(/[^0-9]/g, '');
    });

    // Password confirmation validation
    function validatePasswords() {
        const newPassword = newPasswordInput.value;
        const confirmPassword = confirmPasswordInput.value;

        if (confirmPassword === '') {
            passwordMatchDiv.textContent = '';
            passwordMatchDiv.className = 'form-text';
            return;
        }

        if (newPassword === confirmPassword) {
            passwordMatchDiv.textContent = '✓ Passwords match';
            passwordMatchDiv.className = 'form-text text-success';
        } else {
            passwordMatchDiv.textContent = '✗ Passwords do not match';
            passwordMatchDiv.className = 'form-text text-danger';
        }
    }

    newPasswordInput.addEventListener('input', validatePasswords);
    confirmPasswordInput.addEventListener('input', validatePasswords);

    // Form submission
    form.addEventListener('submit', function(e) {
        const newPassword = newPasswordInput.value;
        const confirmPassword = confirmPasswordInput.value;
        const otp = otpInput.value;

        if (otp.length !== 6) {
            e.preventDefault();
            alert('Please enter a valid 6-digit OTP');
            return;
        }

        loadingSpinner.classList.remove('d-none');
        updateBtn.disabled = true;
        updateBtn.textContent = 'Updating...';
    });
});
</script>

<%- include("../../views/partials/user/footer") %>
