<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up - KITAB4U</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="shortcut icon" href="../../images/logo.png" type="image/x-icon">
    <link rel="stylesheet" href="../../styles/user/signup.css">
</head>
<body>
<div class="container-fluid signup-container flex-column flex-lg-row">
        <!-- Left Panel -->
    <div class="col-12 col-lg-6 left-panel d-flex">
            <img src="../../images/logo.png" alt="logo" class="img-fluid" style="max-width: 500px;">
        </div>

        <!-- Right Panel -->
        <div class="col-lg-6 col-12 right-panel">
            <div class="signup-form">
                <h2 class="form-title">SIGN UP TO KITAB4U</h2>
                <br>
                <!-- Signup Form -->

                 <!-- Flash Messages -->
<% if (error && error.length > 0) { %>
    <div class="alert alert-danger" role="alert">
        <% error.forEach(function(msg) { %>
            <p class="mb-0"><%= msg %></p>
        <% }); %>
    </div>
<% } %>

<% if (success && success.length > 0) { %>
    <div class="alert alert-success" role="alert">
        <% success.forEach(function(msg) { %>
            <p class="mb-0"><%= msg %></p>
        <% }); %>
    </div>
<% } %>

                <form action="/signup" method="POST" onsubmit="disableButton()">
                    <input type="text" class="form-control" name="name" value="<%= formData ? formData.name : '' %>" placeholder="Name" id="name" maxlength="20">
                    <input type="text" class="form-control" name="email" value="<%= formData ? formData.email : '' %>" placeholder="Email Address" id="email">
                    <input type="tel" class="form-control" name="phone" value="<%= formData ? formData.phone : '' %>" placeholder="Phone Number" id="phone" maxlength="10" pattern="[0-9]{10}">
                    <input type="password" class="form-control" name="password" value="<%= formData ? formData.password : '' %>" placeholder="Password" id="password">
                    <input type="password" class="form-control" name="confirmPassword" placeholder="Confirm Password" id="confirmPassword">
                    <input type="text" class="form-control" name="referralCode" value="<%= formData ? formData.referralCode : '' %>" placeholder="Do you have a Referal Code ?" id="referralCode" maxlength="15">
                    
                    <button type="submit" class="btn create-btn" id="createBtn">Create Account</button>
                </form>

                <div class="login-link">
                    Already have an account ? <a href="/login">Log in</a>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
  function disableButton() {
    const btn = document.getElementById("createBtn");
    btn.disabled = true;
    btn.innerText = "Processing..."; 
  }
</script>

</body>
</html>
